= form_for @role do |f|
  - if @role.errors.any?
    #error_explanation
      %h2= "#{pluralize(@role.errors.count, "error")} prohibited this role from being saved:"
      %ul
        - @role.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :users
    = f.collection_select :user_ids, User.all, :id, :email, { :selected => @role.users.collect(&:id) }, { multiple: true }
  .actions
    = f.submit 'Save'
