%p#notice= notice

%p
  %b Start:
  = @shift.start
%p
  %b End:
  = @shift.end
%p
  %b Size:
  = @shift.size
%p
  %b Task:
  = @shift.task.name if @shift.task
%p
  %b Workers:
  %ul
    - @shift.workers.each do |worker|
      %li= worker.email

= link_to 'Delete', @shift, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: [:btn, 'btn-default']
= link_to 'Edit', edit_shift_path(@shift), class: [:btn, 'btn-default']
= link_to 'Back', shifts_path, class: [:btn, 'btn-default']
