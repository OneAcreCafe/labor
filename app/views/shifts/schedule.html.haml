= @start_date
= @end_date

%ul
  - @tasks.each do |task|
    %li
      = task.name
      %ol
        - (@start_hour .. @end_hour).step(1) do |hour|
          %li
            = hour
            %ol
              - (@start_date.to_i .. @end_date.to_i).step(24*60*60) do |timestamp|
                - day = Time.at(timestamp)
                - day.hour = hour
                %li= day
