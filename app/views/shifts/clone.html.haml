%h1 Clone Shifts

= form_tag clone_shifts_path do

  .form-group
    = label_tag nil, 'Range to Clone', class: ['col-sm-2', 'control-label']
    .col-sm-10.input-daterange
      = text_field :from, :start, data: { provide: :datepicker }, class: 'input-small'
      %span.add-on to
      = text_field :from, :end, data: { provide: :datepicker }, class: 'input-small'

  .form-group
    = label_tag nil, 'To Start Date', class: ['col-sm-2', 'control-label']
    .col-sm-10= text_field :to, :start, data: { provide: :datepicker }, class: ['input-small', 'form-control']

  .actions
    = submit_tag 'Clone', class: [:btn, 'btn-default']
