= form_for @drop do |f|
  - if @drop.errors.any?
    #error_explanation
      %h2= "#{pluralize(@drop.errors.count, "error")} prohibited this drop from being saved:"
      %ul
        - @drop.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :shift
    = f.text_field :shift
  .field
    = f.label :time
    = f.datetime_select :time
  .field
    = f.label :reason
    = f.text_field :reason
  .actions
    = f.submit 'Save'
