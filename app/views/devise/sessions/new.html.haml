%h2 Sign In

= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  .form-group
    = f.label :email, class: ['col-sm-2', 'control-label']
    .col-sm-10= f.email_field :email, {:autofocus => true, class: 'form-control'}

  .form-group
    = f.label :password, class: ['col-sm-2', 'control-label']
    .col-sm-10= f.password_field :password, class: 'form-control'

  - if devise_mapping.rememberable?
    .form-group
      = f.label :remember_me, class: ['col-sm-2', 'control-label']
      = f.check_box :remember_me

  %div= f.submit 'Sign In', class: [:btn, 'btn-default']

= render 'devise/shared/links'
