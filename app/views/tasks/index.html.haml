%h1 Listing Tasks

%table.datatable
  %tr
    %th Name
    %th Description
    %th Icon
    %th

  - @tasks.find_each do |task|
    %tr
      %td= task.name
      %td= task.description
      %td= image_tag task.icon, class: :icon
      %td
        = link_to 'Show', task, class: [:btn, 'btn-info']
        - if can? :update, task
          = link_to 'Edit', edit_task_path(task), class: [:btn, 'btn-primary']
        - if can? :destroy, task
          = link_to 'Delete', task, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: [:btn, 'btn-danger']
